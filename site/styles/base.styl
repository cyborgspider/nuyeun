*
  box-sizing border-box
  &:after
  &:before
    box-sizing border-box

html
body
  font-size 100%
  height    100%

body
  -webkit-font-smoothing antialiased
  font normal 0.875rem/1 'Helvetica', 'Arial', sans-serif
  background             #fff
  color                  $black
  margin                 0
  padding                0

  &.modal-on
    overflow hidden

h1
  font-size  2rem
  text-align center
  padding 20px 0

.wrap
  zIndex('middle')
  position relative
