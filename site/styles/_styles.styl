global-reset()

// VARIABLES
//Colors
$black     = #363636
$red-light = #fa2c40
$red-med   = #d1051e
$red-dark  = #8f242e

//Breakpoints
$tablet-vertical = '(min-width:48em)'
$phone-vertical = '(min-width:30em)'

//MIXINS
zIndex(type)
  if type == 'topmost'
    z-index 5
  if type == 'screen'
    z-index 4
  if type == 'nav'
    z-index 3
  if type == 'middle'
    z-index 2
  if type == 'bottom'
    z-index 1

//IMPORT
@import 'base'
@import 'layout'
@import 'nav'
@import 'project-list'
@import 'project-details'
@import 'modal'

@import 'animate'
